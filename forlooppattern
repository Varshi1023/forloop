#include<stdio.h>
int main()
{
    int i,j,n;
    char word[100];
    printf("\n Enter the number of rows-");
    scanf("%d",&n);
    printf("\n Enter the word you want to print-");
    scanf(" %s",&word);
    printf("\n");
    for(i=0;i<n;++i)
    {
        for(j=0;j<=i;++j)
        {
            printf("%s ",word);

        }

        printf("\n");
    }


    return 0;

}
